// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL") // uses connection pooling
}

model Account {
  id        Int      @id @default(autoincrement())
  uuid      String?
  code      String?
  name      String?
  level     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  partnerId Int?
  partner   Partner? @relation(fields: [partnerId], references: [id])

  @@map("accounts")
}

model Partner {
  id       Int     @id @default(autoincrement())
  name     String?
  nickName String?

  accounts Account[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("partners")
}

model Admin {
  id        Int      @id @default(autoincrement())
  
  username  String?
  password  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admins")
}


model Key {
  id        Int      @id @default(autoincrement())
  name      String
  key       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("keys")
}
